autoimport Cairo;

void rottext () {
    cairo_t	cr = new ();
    select_font (cr, "sans-serif", font_slant_t.NORMAL, font_weight_t.NORMAL);
    scale_font (cr, 20);
    set_rgb_color (cr, 0, 0, 0);
    
    for (real a = 0; a < 2 * pi; a += pi / 10) {
	save (cr);
	translate (cr, 150, 150);
	rotate (cr, a);
	move_to (cr, 50, 0);
	show_text (cr, "Hello, world!");
	restore (cr);
    }
}

rottext ();
sleep (20000);
