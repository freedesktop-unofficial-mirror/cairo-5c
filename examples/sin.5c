void clear (foreign cr) {
    save (cr);
    identity_matrix (cr);
    set_rgb_color (cr, 1, 1, 1);
    int w = width (cr);
    int h = height (cr);
    move_to (cr, 0, 0);
    line_to (cr, w, 0);
    line_to (cr, w, h);
    line_to (cr, 0, h);
    fill (cr);
    restore (cr);
}

void draw_sin (foreign cr) {
    move_to (cr, 0, 0);
    for (real a = 0; a <= 2 * pi; a += pi/100) {
	line_to (cr, a, sin(a));
    }
    stroke (cr);
}
